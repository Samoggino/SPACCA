<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacca.controller.PartitaController">
    <children>
        <Group>
            <children>
                <Label layoutX="14.0" layoutY="5.0" prefHeight="18.0" prefWidth="138.0"
                    text="Hai un codice partita?" />

                <TextField fx:id="codeTextField" layoutY="38.0" prefHeight="26.0" prefWidth="166.0"
                    promptText="Inserisci il codice qui" />

                <Button layoutX="37.0" layoutY="71.0" onAction="#inviaCodice" text="Invia Codice" />
            </children>
        </Group>
        <VBox fx:id="partitaControllerVBox" alignment="CENTER" spacing="20.0">
            <children>
                <Button onAction="#nuovaPartita" text="Crea una partita" />
                <Button onAction="#rubaUnMazzo" text="Ruba un mazzo" />
                <Button onAction="#rubaMezzoMazzo" text="Ruba mezzo mazzo" />
                <Button onAction="#risultatoPartita"
                    text="Mostra il risultato" />
                <Button onAction="#prendiUnaCartaDalTavoloYoshi"
                    text="Prendi una carta dal tavolo" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>